<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- activity & fragment themes. -->

    <style name="MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="root_color">@color/colorRoot</item>
        <item name="line_color">@color/colorLine</item>
        <item name="title_color">@color/colorTextTitle</item>
        <item name="subtitle_color">@color/colorTextSubtitle</item>
        <item name="content_color">@color/colorTextContent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:popupMenuStyle">@style/material_popup_menu</item>
    </style>

    <style name="MyTheme.Translucent" parent="MyTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- photo activity. -->

    <style name="MyTheme.Translucent.Photo" parent="MyTheme.Translucent">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!-- photo preview activity. -->

    <style name="MyTheme.Translucent.PhotoPreview" parent="MyTheme.Translucent">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <!-- user activity. -->

    <style name="MyTheme.Translucent.User" parent="MyTheme.Translucent" />

    <!-- me activity. -->

    <style name="MyTheme.Translucent.Me" parent="MyTheme.Translucent" />

    <!-- collection activity. -->

    <style name="MyTheme.Translucent.Collection" parent="MyTheme.Translucent" />

    <!-- settings activity. -->

    <style name="MyTheme.Translucent.Settings" parent="MyTheme.Translucent">
        <item name="android:alertDialogTheme">@style/MyDialogTheme</item>
    </style>

    <!-- common activity theme. -->

    <style name="MyTheme.Translucent.Common" parent="MyTheme.Translucent" />

    <!-- toolbar. -->

    <style name="MyToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">?attr/content_color</item>
        <item name="android:textColorSecondary">?attr/content_color</item>
    </style>

    <!-- menu. -->

    <style name="MyPopupMenuTheme" parent="@style/ThemeOverlay.AppCompat">
        <item name="android:colorBackground">?attr/root_color</item>
        <item name="android:textColor">?attr/content_color</item>
    </style>

    <!-- Text -->

    <style name="large_title_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/large_title_text_size</item>
        <item name="android:textColor">?attr/title_color</item>
    </style>

    <style name="title_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">?attr/title_color</item>
    </style>

    <style name="subtitle_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/subtitle_text_size</item>
        <item name="android:textColor">?attr/subtitle_color</item>
    </style>

    <style name="content_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/content_text_size</item>
        <item name="android:textColor">?attr/content_color</item>
    </style>

    <!-- button -->

    <style name="material_button" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/subtitle_text_size</item>
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="material_image_button">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">@dimen/little_margin</item>
        <item name="android:layout_margin">@dimen/little_margin</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <!-- image -->

    <style name="material_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/normal_margin</item>
    </style>

    <!-- popup. -->

    <style name="material_popup_menu"
        parent="@android:style/Widget.Holo.PopupMenu">
        <item name="android:popupBackground">?attr/root_color</item>
    </style>

    <!-- dialog. -->

    <style name="MyDialogTheme" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:textColorPrimary">@color/colorTextTitle</item>
        <item name="android:textColorAlertDialogListItem">@color/colorTextContent</item>
        <item name="android:textColorSecondary">@color/colorTextContent</item>
        <item name="colorAccent">@color/colorTextTitle</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>